{% extends 'layout_backend.html.twig' %}


{% block title %}Base Layout{% endblock %}

{% block content_header_username %}

{% endblock %}


{# Navbar Side + active Link #}
{% block layoutNavBar %}
    {{ parent() }}
    {% block navActiveBlog %}class="active"{% endblock %}
{% endblock %}


{# Content-Header, hier Titel und optionalen Text setzen #}
    {% block pageHeader %}
        {{ parent() }}
        {% block pageHeaderDescription %} - übersicht{% endblock %}
        {% block pageHeaderTitel %}Blog{% endblock %}
        {% block BreadcrumbMainLevel %}<li><a href="{{ path('backend_blog') }}"><i class="fa fa-dashboard"></i> Blog</a></li>{% endblock %}
        {% block BreadcrumbMainLevelSubOne %}{% endblock %} {# No Sublevel here #}
    {% endblock %}


{% block content %}

        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->
            {# Leist mit defaul actions #}

                <div class="btn-group btn-group-justified">
                    <a class="btn btn-info" href="{{ path('backend_blog_new') }}">Neuer Artikel</a>
                    <a class="btn btn-default" href="{{ path('backend_blog_seo') }}">Seo Einstellungen</a>
                </div>

            <br><br><br>

                <div class="row">
                    <div class="col-sm-8">
                        <div class="box box-default">
                            <div class="box-header with-border">
                                <h3 class="box-title">Blog Artikel</h3>
                                <div class="box-tools pull-right">
                                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                                </div><!-- /.box-tools -->
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="blogTable" class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Sort</th>
                                        <th>Titel</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for items in data %}
                                        <tr>
                                            <td>{{ items.sort }}</td>
                                            <td>{{ items.titel }}</td>
                                            <td>
                                                <a href="{{ path('backend_blog_sortup', { 'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag nach oben verschieben" data-tooltip-position="top"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></a>
                                                <a href="{{ path('backend_blog_sortdown', { 'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag nach unten verschieben" data-tooltip-position="top"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></a>
                                                <a href="{{ path('backend_blog_edit', {'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag bearbeiten" data-tooltip-position="top"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                                <a href="{{ path('backend_blog_delete', { 'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag löschen" data-tooltip-position="top"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                    <div class="col-sm-4">

                            <!-- Info Boxes Style 2 -->
                            <div class="info-box bg-aqua">
                                <span class="info-box-icon"><i class="ion ion-android-done"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text">Tip!</span>
                                    <span class="info-box-text">Artikel sollten mindestens 100 Wörter enthalten!</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                            <div class="info-box bg-aqua">
                                <span class="info-box-icon"><i class="ion ion-android-done"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text">Tip!</span>
                                    <span class="info-box-text">Für SEO optimierte Inhalte kontaktieren Sie die Interpunkt AG für eine unverbindliche Offerte.</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                    </div>
                </div>

        </section><!-- /.content -->

{% endblock %}
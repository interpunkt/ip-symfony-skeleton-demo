{% extends 'layout_backend.html.twig' %}

{% block content_header_username %}

{% endblock %}

{% block content %}
    <p>Hier Blog Index</p>

    {# Tabelle mit Einträgen aus Table Blog, wenn keine Einträge vorhanden Nachricht ausgeben das keine News vorhanden sind #}


    {# Leist mit defaul actions #}
    <div>
        <a href="{{ path('backend_blog_new') }}">Neuen Artikel erstellen</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titel</th>
                <th>sort</th>
                <th>actions</th>
            </tr>
        </thead>

        <tbody>
            {% for items in data %}
                <tr>
                    <td>{{ items.id }}</td>
                    <td>{{ items.titel }}</td>
                    <td>sorter</td>
                    <td>
                        <button data-tooltip="Beitrag nach oben verschieben" data-tooltip-position="top"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></button>
                        <button data-tooltip="Beitrag nach unten verschieben" data-tooltip-position="top"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></button>
                        <button data-tooltip="Beitrag bearbeiten" data-tooltip-position="top"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                        <button data-tooltip="Beitrag löschen" data-tooltip-position="top"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>



{% endblock %}
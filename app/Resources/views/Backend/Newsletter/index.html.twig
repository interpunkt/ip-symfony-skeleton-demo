{% extends 'layout_backend.html.twig' %}


{% block title %}Base Layout{% endblock %}

{% block content_header_username %}

{% endblock %}


{# Navbar Side + active Link #}
{% block navbar %}
    {{ parent() }}
    {% block navActiveNewsletter %}class="active"{% endblock %}
{% endblock %}


{# Content-Header, hier Titel und optionalen Text setzen #}
    {% block pageHeader %}
        {{ parent() }}
        {% block pageHeaderDescription %} - übersicht{% endblock %}
        {% block pageHeaderTitel %}Newsletter{% endblock %}
        {% block BreadcrumbMainLevel %}<li><a href="{{ path('backend_newsletter') }}"><i class="fa fa-dashboard"></i> Newsletter</a></li>{% endblock %}
        {% block BreadcrumbMainLevelSubOne %}{% endblock %} {# No Sublevel here #}
    {% endblock %}


{% block content %}

        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->
            {# Leist mit defaul actions #}

                <div class="btn-group btn-group-justified">
                    <a class="btn btn-info" href="{{ path('backend_newsletter_new') }}">Neuer Newsletter</a>
                </div>

            <br><br><br>


                        <div class="box box-default">
                            <div class="box-header with-border">
                                <h3 class="box-title">Newsletter Artikel</h3>
                                <div class="box-tools pull-right">
                                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                                </div><!-- /.box-tools -->
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="blogTable" class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Sort</th>
                                        <th>Titel</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for items in data %}
                                        <tr>
                                            <td>{{ items.sort }}</td>
                                            <td>{{ items.titel }}</td>
                                            <td>
                                                <a href="{{ path('backend_newsletter_sortup', { 'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag nach oben verschieben" data-tooltip-position="top"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></a>
                                                <a href="{{ path('backend_newsletter_sortdown', { 'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag nach unten verschieben" data-tooltip-position="top"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></a>
                                                <a href="{{ path('backend_newsletter_edit', {'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag bearbeiten" data-tooltip-position="top"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                                <a href="{{ path('backend_newsletter_delete', { 'id' : items.id }) }}" class="btn btn-default" data-tooltip="Beitrag löschen" data-tooltip-position="top"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->


        </section><!-- /.content -->

{% endblock %}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {% javascripts
        'assets/vendor/js/jquery.js'
        'assets/vendor/bootstrap/js/bootstrap.min.js'
        'assets/vendor/jquery-tablesorter/jquery.tablesorter.js'
        'assets/vendor/bootstrap-table/bootstrap-table.js'
        'assets/js/backend.js'
        output='assets/vendor/js/compiled/app.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% stylesheets
        'assets/vendor/bootstrap/css/bootstrap.min.css'
        'assets/vendor/bootstrap-table/bootstrap-table.css'
        'assets/vendor/jquery-tablesorter/style.css'
        'assets/css/style.css'
    filter='cssrewrite' output='assets/vendor/css/compiled/app.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
</head>
<body class="backend">

    <header class="header">
        <div class="page-wrapper">
            <div class="logo">
                <a href="#" class="logo__link">
                    {% block logo %}
                        <img src="{{ asset('assets/images/aufbau/inter-punkt-logo.png') }}" alt="inter-punkt. Logo" title="Seite ansehen" class="logo__img">
                    {% endblock %}            
                </a>
            </div>
            <nav class="topnav">
                <a href="http://inter-punkt.ch" target="_blank" class="button"><span class="glyphicon glyphicon-question-sign" style="margin-right:5px; vertical-align:text-top;"></span>Support</a>
                <a href="{{ path('fos_user_security_logout') }}" class="button button--icon"><span class="glyphicon glyphicon-user" style="margin-right:5px; vertical-align:text-top;"></span>Logout</a>
            </nav>
        </div>
    </header>

    <main class="page-wrapper">
        <!-- LoginForm -->
        {% block login %}{% endblock %}
        
        <!-- Actionbar -->
        {% block actionBar %}{% endblock %}

        <!-- Block Content -->
        {% block body %}{% endblock %} 
    </main>
    
</body>
</html>
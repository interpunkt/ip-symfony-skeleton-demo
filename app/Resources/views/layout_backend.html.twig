    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all" />
    {% endstylesheets %}

    {% stylesheets
        'assets/vendor/bootstrap/css/bootstrap.min.css'
        'assets/vendor/bootstrap-table/bootstrap-table.css'
        'assets/css/main.css'
        'assets/less/main.css'
        'assets/vendor/bootstrap-colorpicker-bundle/Resources/public/css/bootstrap-colorpicker.min.css'
        'assets/css/nav.css'
    filter='cssrewrite' output='assets/vendor/css/compiled/app.css' %}

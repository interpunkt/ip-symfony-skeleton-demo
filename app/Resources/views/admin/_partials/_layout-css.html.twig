{# Check for DEV mode #}
{% if app.environment == "dev" %}

    {# DEV FILES #}
        {# Libaries #}
        <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/datatables/media/css/dataTables.bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/gridstack/dist/gridstack.css') }}">

        {# own Files #}
        <link rel="stylesheet" href="{{ asset('assets/backend/css/AdminLTE.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/backend/css/skin-interpunkt.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/backend/css/backend.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/backend/css/login.css') }}">

{% else %}

    {# PROD FILE #}
    {% stylesheets filter='cssrewrite' output='assets/compiled/app.min.css'

        'assets/vendor/font-awesome/css/font-awesome.css'
        'assets/vendor/bootstrap/dist/css/bootstrap.css'
        'assets/vendor/datatables/media/css/dataTables.bootstrap.min.css'
        'assets/vendor/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css'
        'assets/vendor/datatables/media/css/jquery.dataTables.css'

        'assets/backend/css/AdminLTE.css'
        'assets/backend/css/skin-interpunkt.css'
        'assets/backend/css/backend.css'
        'assets/backend/css/login.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    {% stylesheets filter='lessphp' output='assets/backend/css/colors.min.css'
        'assets/backend/less/all.less'
    %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

{% endif %}
{% extends 'layout_backend.html.twig' %}


{% block title %}{{ title }} - bearbeiten{% endblock %}

{# Navbar Side + active Link #}
{% block navbar %}
    {{ parent() }}
    {% block navActiveUser %}class="active"{% endblock %}
{% endblock %}

{# Content-Header, hier Titel und optionalen Text setzen #}
{% block pageHeader %}
    {{ parent() }}
    {% block pageHeaderDescription %} bearbeiten{% endblock %}
    {% block pageHeaderTitel %}{{ title }} - {% endblock %}
    {% block BreadcrumbMainLevel %}<li><a href="{{ path('admin_user') }}"><i class="fa fa-dashboard"></i> {{ title }}</a></li>{% endblock %}
    {% block BreadcrumbMainLevelSubOne %}<li class="active">{{ title }} bearbeiten</li>{% endblock %}
{% endblock %}

{% block content %}

    <!-- Main content -->
    <section class="content">

        <!-- Your Page Content Here -->
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

        <br><br>
        <p>Neues Passwort anfordern</p>
        <a href="{{ path('admin_password_reset_request', { 'id' : id }) }}">Passwort Request</a>

    </section><!-- /.content -->


{% endblock %}
{################################################ 
    Layout Definition & Variables
#################################################}

{# Layout #}
{% extends 'layoutAdmin.html.twig' %}

{# Sidebar: Aktiver Link #}
{% block navActiveIndex %}class="active"{% endblock %}

{# Content-Header: Titel und optionale Description + Breadcrumps #}
{% block pageHeader %}
    {{ parent() }}

    {# Seitentitel #}
    {% block pageHeaderTitel %}Startseite{% endblock %}

    {# Beschreibung neben Seitentitel #}
    {% block pageHeaderDescription %}{% endblock %}

    {# Breadcrumb: Toplevel #}
    {% block BreadcrumbMainLevel %}
        <li><a href="#"><i class="fa fa-sitemap"></i> Info</a></li>
    {% endblock %}

    {# Breadcrumb: Sublevel #}
    {% block BreadcrumbMainLevelSubOne %}{% endblock %} {# No Sublevel here #}
{% endblock %}


{################################################ 
    Block: content
#################################################}

{% block content %}
    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-9">
              <div class="box">
                <div class="box-header with-border">
                  <h3 class="box-title">Willkommen im Admin Bereich</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  Eine Dokumentation zum Dashboard finden Sie hier <a href="#">Dokumentation Dashboard</a>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
            <div class="col-md-3">
              <div class="box">
                <div class="box-header with-border">
                  <h3 class="box-title">Interpunkt AG</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  Tel.
                  E-Mail
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div>
            <div class="clearfix"></div>
        </div>

        {# Gridstack #}
        <style>
            .grid-stack-item{
                border: 1px solid silver;
                background-color: #00A6C7;
            }
        </style>


        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">

                </h3>
            </div><!-- /.box-header -->
            <div class="box-body">


            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </section><!-- /.content -->
{% endblock %}
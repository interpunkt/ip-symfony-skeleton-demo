{% extends 'layoutFrontend.html.twig' %}
{% block title %}index{% endblock %}
{% block navbar %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <style>
        .center-box{
            text-align: center;
            display: flex;
            justify-content: center; /* align horizontal */
            align-items: center; /* align vertical */
            padding: 50px;
        }
    </style>
    <div class="container">
        <div class="row">
            <h1>Twig Images showcase</h1>
        </div>
        <div class="row">
            <div class="one-half column center-box">
                <h3>Responsive Image with srcset, lazyload & resize Twig Filter</h3>
            </div>
            <div class="one-half column">
                <img
                        data-sizes="auto"
                        data-src="{{ asset('uploads/images/sunset.jpg'|resize(600, null)) }}"
                        data-srcset="
                        {{ asset('uploads/images/sunset.jpg'|resize(600, null)) }} 600w,
                        {{ asset('uploads/images/sunset.jpg'|resize(200, null)) }} 200w,
                        {{ asset('uploads/images/sunset.jpg'|resize(400, null)) }} 400w,
                        {{ asset('uploads/images/sunset.jpg'|resize(800, null)) }} 800w,
                        {{ asset('uploads/images/sunset.jpg'|resize(1280, null)) }} 1280w
                        "
                        class="lazyload" />
            </div>
        </div>
    <br><br>
    <row>
        <div class="center-box">
            <img
                    data-sizes="auto"
                    data-src="{{ asset('uploads/images/code.jpg'|resize(800, null)) }}"
                    data-srcset="
                        {{ asset('uploads/images/code.jpg'|resize(600, null)) }} 600w,
                        {{ asset('uploads/images/code.jpg'|resize(200, null)) }} 200w,
                        {{ asset('uploads/images/code.jpg'|resize(400, null)) }} 400w,
                        {{ asset('uploads/images/code.jpg'|resize(800, null)) }} 800w,
                        {{ asset('uploads/images/code.jpg'|resize(1280, null)) }} 1280w
                        "
                    class="lazyload" />
        </div>
    </row>
    <br><br>
    <hr>
        <div class="row">
            <div class="one-half column">
                    <img
                            data-sizes="auto"
                            data-src="{{ asset('uploads/images/sunset.jpg'|fit(600, 600)) }}"
                            data-srcset="
                        {{ asset('uploads/images/sunset.jpg'|fit(600, 600)) }} 600w,
                        {{ asset('uploads/images/sunset.jpg'|fit(200, 200)) }} 200w,
                        {{ asset('uploads/images/sunset.jpg'|fit(400, 400)) }} 400w,
                        {{ asset('uploads/images/sunset.jpg'|fit(800, 800)) }} 800w,
                        {{ asset('uploads/images/sunset.jpg'|fit(1280, 1280)) }} 1280w
                        "
                            class="lazyload" />
            </div>
            <div class="one-half column center-box">
                <h3>Responsive Image with srcset & lazyload & fit Twig Filter</h3>
            </div>
        </div>

    <div class="row">
        <br><br>
        <h3>Googe Page Speed</h3>
        <p>Mit einfachen Mitteln im gr√ºnen Bereich.</p>
        <img
                data-sizes="auto"
                data-src="{{ asset('uploads/images/google.png'|resize(800, null)) }}"
                data-srcset="
                        {{ asset('uploads/images/google.png'|resize(600, null)) }} 600w,
                        {{ asset('uploads/images/google.png'|resize(200, null)) }} 200w,
                        {{ asset('uploads/images/google.png'|resize(400, null)) }} 400w,
                        {{ asset('uploads/images/google.png'|resize(800, null)) }} 800w,
                        {{ asset('uploads/images/google.png'|resize(1280, null)) }} 1280w
                        "
                class="lazyload" />
    </div>
{% endblock %}
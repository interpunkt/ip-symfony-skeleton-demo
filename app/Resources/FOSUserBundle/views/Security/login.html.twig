{################################################
    Layout Definition & Variables
#################################################}

{# Layout #}
{% extends 'layoutLogin.html.twig' %}

{################################################
    Block: content
#################################################}

{% block content %}
    {% block fos_user_content %}

        <section class="login__content">
            <div class="box box-primary login__box">
                <div class="box-header with-border">
                    <h3 class="box-title">Login</h3>
                </div>

                <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class="box-body">

                        {# START: error message #}
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-ban"></i>Falsches Login</h4>
                                {% trans %}Die E-Mail Adresse oder das Passwort ist ungültig.{% endtrans %}
                            </div>
                        {% endif %}
                        {# END: error message #}

                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">E-Mail</label>

                            <div class="col-sm-10">
                                <input placeholder="E-Mail" class="form-control" type="text" id="username"
                                       name="_username"
                                       value="{{ last_username }}" required="required" autofocus/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-sm-2 control-label">Passwort</label>

                            <div class="col-sm-10">
                                <input placeholder="Passwort" class="form-control" type="password" id="password"
                                       name="_password" required="required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked>Angemeldet bleiben
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <input class="btn btn-primary pull-right" type="submit" id="_submit" name="_submit"
                               value="Anmelden"/>
                    </div>
                </form>
            </div>

        </section>

        <a href="http://www.interpunkt.ch" target="_blank" class="login__badge">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                <path d="M56.75,39.83c-4.65,0-7,4.45-7,7.49v10c0,4.77,1.81,8.22,6.33,8.22,3.22,0,5.82-3.45,5.82-9.59V47.63C61.9,43.33,60,39.83,56.75,39.83Z"/>
                <path d="M50,0a50,50,0,1,0,50,50A50,50,0,0,0,50,0ZM32.8,62.15v6.44H30.88a7.5,7.5,0,0,1-7.53-7.8V39.84H20.21v-2h3.27c2.81,0,7.87,0,9.31-1.78Zm-4.6-28.66a5.55,5.55,0,1,1,5.55-5.55A5.52,5.52,0,0,1,28.19,33.49ZM57.73,68.76c-4.52,0-6.19-1.92-7.83-5h-.14V82.84H47.84A7.5,7.5,0,0,1,40.31,75V39.84H37.17v-2H39.9c4.86,0,8.63-.07,9.86-2.12v6.57h.14C51.74,38.64,54.36,37,58,37c8.63,0,14.18,7,14.18,16.43C72.17,63.28,64.57,68.76,57.73,68.76Zm22.26,0a5.54,5.54,0,1,1,5.54-5.54A5.52,5.52,0,0,1,80,68.75Z"/>
            </svg>
        </a>

    {% endblock %}
{% endblock %}

{################################################
    Layout Definition & Variables
#################################################}

{# Layout #}
{% extends 'layoutAdmin.html.twig' %}

{# Sidebar: Aktiver Link #}
{% block navActiveIndex %}class="active"{% endblock %}

{# Content-Header: Titel und optionale Description + Breadcrumps #}
{% block pageHeader %}
    {{ parent() }}

    {# Seitentitel #}
    {% block pageHeaderTitel %}Zugriff nicht erlaubt{% endblock %}

    {# Beschreibung neben Seitentitel #}
    {% block pageHeaderDescription %}{% endblock %}

    {# Breadcrumb: Toplevel #}
    {% block BreadcrumbMainLevel %}
        <li><a href="#"><i class="fa fa-sitemap"></i> Zugriff nicht erlaubt</a></li>
    {% endblock %}

    {# Breadcrumb: Sublevel #}
    {% block BreadcrumbMainLevelSubOne %}{% endblock %} {# No Sublevel here #}
{% endblock %}


{################################################
    Block: content
#################################################}

{% block content %}

    <section class="content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="box box-danger">
                    <div class="box-header with-border">
                        <i class="fa fa-warning"></i>
                        <h3 class="box-title">Zugriff nicht erlaubt</h3>
                    </div>
                    <div class="box-body">
                        <p><strong>Auf diese Seite darf nicht zugegriffen werden.</strong> Navigiersen Sie über die linke Navigation zu
                            einer anderen Seite oder kehren zur <a href="{{ path('admin_index') }}">Startseite</a>
                            zurück.
                        </p>
                    </div>
                    <div class="box-footer">
                        <a href="{{ path('admin_index') }}" class="btn btn-primary pull-right">Startseite</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}